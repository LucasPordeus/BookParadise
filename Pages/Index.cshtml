@page
@model IndexModel
@{
    ViewData["Title"] = "Index";
}

<div class="row justify-content-md-center">

    @foreach (var item in Model.ListaLivros)
    {
    <div class="card col-3 m-3">
        <img src="@item.ImagemUri" class="p-3" style="border-radius: 25px">
        <div class="card-body">
            <h5 class="card-title">@item.Nome</h5>
            <a class="btn btn-primary"
               asp-page="/Details"
               asp-route-id="@item.LivroId"
               asp-route-slug="@item.NomeSlug">Ver mais</a>
        </div>
    </div>
    }
</div>