@page
@model BookParadise.Pages.EditModel
@{
}

<div class="row pt-5">
    <div class="col-md-4">
        <form method="post">
            <h4>Alteração do Livro</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Livro.LivroId" />

            <div class="form-group">
                <label asp-for="Livro.Nome" class="control-label"></label>
                <input asp-for="Livro.Nome" class="form-control" />
                <span asp-validation-for="Livro.Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Livro.ImagemUri" class="control-label"></label>
                <input asp-for="Livro.ImagemUri" class="form-control" />
                <span asp-validation-for="Livro.ImagemUri" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Livro.Preco" class="control-label"></label>
                <input asp-for="Livro.Preco" class="form-control" />
                <span asp-validation-for="Livro.Preco" class="text-danger"></span>
            </div>

            <div class="form-group mt-3 mb-3">
                <input class="form-check-input" asp-for="Livro.EntregaExpressa" />
                <label asp-for="Livro.EntregaExpressa" style="margin-left: 15px"></label>
            </div>

            <div class="form-group">
                <label asp-for="Livro.DataCadastro" class="control-label"></label>
                <input asp-for="Livro.DataCadastro" class="form-control" />
                <span asp-validation-for="Livro.DataCadastro" class="text-danger"></span>
            </div>

            <div class="form-group mt-3 mb-3">
                <label asp-for="Livro.ProdutoraId" class="control-label"></label>

                <select class="form-select"
                        asp-for="Livro.ProdutoraId"
                        asp-items="Model.ProdutoraOptionItems">
                    <option value="">Selecione uma opção</option>
                </select>

                <span asp-validation-for="Livro.ProdutoraId" class="text-danger">
                </span>
            </div>

            <div class="form-group mt-3 mb-3">
                <label asp-for="Livro.Categorias" class="control-label"></label>

                <select class="form-select"
                        asp-for="CategoriaIds"
                        asp-items="Model.CategoriaOptionItems">
                </select>

                <span asp-validation-for="Livro.Categorias" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Salvar" class="btn btn-primary"/>
                <input type="submit" value="Excluir" class="btn btn-danger"
                       asp-page-handler="Delete" />
            </div>
        </form>
    </div>
</div>

@section Scripts{

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}